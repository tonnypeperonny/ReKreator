@model ReKreator.Web.Models.ErrorModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

<div class="row justify-content-center text-center">
    <div class="row">
        <div class="table">
            <h1 style="color: dimgrey">Ooops, @Html.DisplayFor(model => model.ErrorTitle) D:</h1>
            <h5 style="color: dimgrey">@Html.DisplayFor(model => model.Message)</h5>
            <br />
            <h6 style="color: dimgrey">Here are a few links that may be helpful:</h6>
            <h6 class="form-group" style="color:dimgrey">
                @Html.ActionLink("Sign In", "SignIn", "Account")
                <br />
                @Html.ActionLink("Create a new account", "SignUp", "Account")
                <br />
                @Html.ActionLink("Home page", "Index", "Home")
            </h6>
        </div>
    </div>
</div>
